<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    style="@style/AppTheme"
    android:layout_height="match_parent"
    tools:context=".GoToTestFour">
    <TextView
        android:layout_marginTop="50dp"
        style="@style/Header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_four_header"/>
    <LinearLayout
        style="@style/BoxLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/WhiteBox"
            android:padding="15dp"
            android:layout_marginVertical="30dp">
            <TextView
                style="@style/Header2"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_four"/>
            <TextView
                style="@style/Header2"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_four_description"/>
        </LinearLayout>
        <Button
            android:layout_margin="70dp"
            android:id="@+id/testFourStartButton"
            style="@style/StartButtonStyle"
            android:layout_width="200dp"
            android:background="@drawable/startbutton"
            android:text="@string/test_four_button"/>
    </LinearLayout>
</LinearLayout>